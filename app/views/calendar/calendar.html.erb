<%= link_to 'Back to Homepage', root_path %><br />

<div class="container mt-5 text-center">
    <h1>Calendar</h1>
    <%= month_calendar(events: @activities) do |date, activities| %>
        <div class="day">
            <%= date %>
        </div>
        <% activities.each do |activities| %>
            <div class="card-header">
                <h5 class="card-title">
                    <%= link_to activities.event_name, activities %>
                </h5>
            </div>
            <div class="card-footer">
                <p class="card-text">
                    From: <%= activities.start_time.strftime('%A, %B %d, %Y at %I:%M %p') %>
                </p>
                <p class="card-text">
                    To: <%= activities.end_time.strftime('%A, %B %d, %Y at %I:%M %p') %>
                </p>
            </div>
        <% end %>
    <% end %>
</div>