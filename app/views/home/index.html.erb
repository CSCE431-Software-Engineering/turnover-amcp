<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AMCP</title>
  <style>
    .contact-header {
      background-color: #f2f2f2;
      padding: 20px;
      position: fixed; 
      bottom: 0; 
      left: 0; 
      width: 100%; 
      box-sizing: border-box; 
      text-align: center; 
    }

    .contact-header h2 {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .contact-header p {
      margin: 0;
      font-size: 16px;
    }

    .editable-input {
      border: none;
      background: none;
      font-size: 16px;
      text-align: center;
    }
  </style>
</head>
  <body>
  <div style="text-align: center;">
    <h1>AMCP</h1>
    <p>This is the homepage for the AMCP website</p>
  </div>
  <div class="contact-header">
    <h2>Contact Us</h2>
    <p>Name: <span id="name" contenteditable="true" class="editable-input"></span></p>
    <p>Email: <span id="email" contenteditable="true" class="editable-input"></span></p>
    <p>Phone: <span id="phone" contenteditable="true" class="editable-input"></span></p>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const editableFields = ['email', 'name', 'phone'];

      editableFields.forEach(function(field) {
        const element = document.getElementById(field);
        const storedValue = sessionStorage.getItem(field);
        if (storedValue) {
          element.innerText = storedValue;
        } else {
          if (field === 'name') element.innerText = 'Jeremiah Hall';
          if (field === 'email') element.innerText = ''; // Default is empty
          if (field === 'phone') element.innerText = '+1-123-456-7890';
        }

        element.addEventListener('keypress', function(e) {
          if (e.key === 'Enter') {
            e.preventDefault();
            this.blur(); // Removes focus, effectively "saving" the edited value
          }
        });

        element.addEventListener('input', function() {
          sessionStorage.setItem(field, this.innerText.trim());
        });
      });
    });
  </script>
  </body>
</html>


