<%= render @activity %>

<div>
  <%= link_to 'View Participants', participants_activity_path(@activity), class: "btn btn-info" %> | 
  <%= link_to "Back to activities", activities_path %>
  <% if current_member&.is_admin? %>
    <%= link_to "Edit this activity", edit_activity_path(@activity) %> | 
    <%= button_to "Destroy this activity", @activity, method: :delete %>
  <% end %>
  <%= button_to 'Sign Up', sign_up_activity_path(@activity), method: :post, class: "btn btn-primary" %>
</div>
