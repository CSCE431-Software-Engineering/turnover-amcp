<%= link_to 'Back to Homepage', root_path %><br />

<h1>Activities</h1>

<div id="activities">
  <% @activities.each do |activity| %>
    <%= render activity %>
    <p>
      <%= link_to "Show this activity", activity %>
    </p>
  <% end %>
</div>
<% if current_member&.is_admin? %>
  <%= link_to "New activity", new_activity_path %>
<% end %>
